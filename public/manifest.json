{
  "name": "Support Helper",
  "options_page": "options.html",
  "description": "The best support extension ever!",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "public/images/support-16.png",
      "32": "public/images/support-32.png",
      "48": "public/images/support-48.png",
      "128": "public/images/support-128.png"
    }
  },
  "icons": {
    "16": "/images/support-16.png",
    "32": "/images/support-32.png",
    "48": "/images/support-48.png",
    "128": "/images/support-128.png"
  }
}
